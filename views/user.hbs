
<div>

    <div class="bg-gradient-to-r from-purple-500 to-indigo-500">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-white">Users List</h1>
    </div>
    </div>
    {{#if users.length}}
    <table class="min-w-full divide-y divide-gray-200">
        <thead>
            <tr>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
            <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created At</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr class="bg-white">
            <td class="px-6 py-4 whitespace-nowrap">{{ email }}</td>
            <td class="px-6 py-4 whitespace-nowrap">{{ type }}</td>
            <td class="px-6 py-4 whitespace-nowrap">{{ createdAt }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <p  class="text-lg text-gray-500">No users available at the moment.</p>
      </div>
    {{/if}}


</div>